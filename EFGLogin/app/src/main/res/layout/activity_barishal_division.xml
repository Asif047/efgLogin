<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asif047.efglogin.Division.BarishalDivisionActivity">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- Everything you want to scroll goes here -->


            <Button
                android:text="Barishal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:onClick="goToDhakaDistrictOnClick"
                />

            <Button
                android:text="Barguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"/>

            <Button
                android:text="Bhola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"/>



            <Button
                android:text="Jhalokati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"/>



            <Button
                android:text="Pathakhali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"/>


            <Button
                android:text="Pirojpur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"/>




        </LinearLayout>
    </ScrollView>



</LinearLayout>
